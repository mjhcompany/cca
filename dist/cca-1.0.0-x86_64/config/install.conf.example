# CCA Installation Configuration
# Edit this file before running install.sh

# =============================================================================
# Installation Paths
# =============================================================================
PREFIX=/usr/local
# BIN_DIR=$PREFIX/bin
# DATA_DIR=$PREFIX/share/cca
# CONFIG_DIR=$PREFIX/etc/cca

# =============================================================================
# CCA Service Ports
# Using high ports to avoid conflicts with common services
# =============================================================================
CCA_DAEMON_PORT=8580
CCA_ACP_PORT=8581

# =============================================================================
# Redis Configuration
# Using high port to avoid conflicts with default Redis (6379)
# =============================================================================
REDIS_PORT=16379
REDIS_PASSWORD=
# Leave empty for no password, or set a secure password for production

# =============================================================================
# PostgreSQL Configuration
# Using high port to avoid conflicts with default PostgreSQL (5432)
# =============================================================================
POSTGRES_PORT=15432
POSTGRES_USER=cca
POSTGRES_PASSWORD=cca_secure_password
POSTGRES_DB=cca

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_COMPOSE_PROJECT=cca
# Set to "yes" to start services after install
START_SERVICES=yes

# =============================================================================
# Logging
# =============================================================================
LOG_DIR=/var/log/cca
LOG_LEVEL=info

# =============================================================================
# Authentication (optional)
# =============================================================================
# API_KEYS=key1,key2,key3
# REQUIRE_AUTH=no

# =============================================================================
# Embeddings Configuration (Ollama)
# =============================================================================
EMBEDDINGS_ENABLED=true
EMBEDDINGS_OLLAMA_URL=http://192.168.33.218:11434
EMBEDDINGS_MODEL=nomic-embed-text:latest
EMBEDDINGS_DIMENSION=768
